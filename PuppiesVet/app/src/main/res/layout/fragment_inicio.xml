<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioFragment"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/iv_LogoInicio"
        android:layout_width="193dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logotexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_LogoInicio">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_BienvenidaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="¡Bienvenido!"
                    android:textColor="@color/color_principal"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/tv_PreguntaAccionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="¿Qué deseas gestionar?"></TextView>

                "
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_FotoUsuarioHeader"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/perfilsinfoto"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>