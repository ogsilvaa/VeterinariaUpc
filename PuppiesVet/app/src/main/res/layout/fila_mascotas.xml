<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/color_botonesNav"
        app:cardCornerRadius="16sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_mascotaSinFoto"
                android:contentDescription="Imagen de Mascota"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:foregroundGravity=""
                android:padding="8dp"
                app:srcCompat="@drawable/mascotasinfoto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/text_NombreMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Nombre"
                android:textColor="@color/color_principal"
                app:layout_constraintStart_toEndOf="@+id/iv_mascotaSinFoto"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_TipoMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:text="Tipo"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/color_principal"
                app:layout_constraintStart_toEndOf="@+id/iv_mascotaSinFoto"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_GeneroMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/roboto_regular"
                android:text="GÃ©nero"
                android:textColor="@color/color_principal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_mascotaSinFoto" />

            <TextView
                android:id="@+id/text_EdadMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/color_principal"
                android:text="Edad"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_mascotaSinFoto" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>